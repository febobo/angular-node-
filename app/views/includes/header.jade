.navbar.navbar-inverse.navbar-fixde-top.rn.mn
	.container
		.navbar-header
			a.navbar-brand(href='/') #{title}
		if category && category.length 
		each item in category
			p.navbar-text
				a.navbar-link(href="#") #{item.title}
		if user
			p.navbar-text.navbar-right
				span
					span.glyphicon.glyphicon-user.mr5
					span 欢迎您 , #{user.userName}
				span &nbsp; | &nbsp;
				a.navbar-link(href='signout')
					span.glyphicon.glyphicon-off
		else
			p.navbar-text.navbar-right
				a.navbar-link(href="/signup") 注册
				span &nbsp; | &nbsp;
				a.navbar-link(href='/signin') 登陆
